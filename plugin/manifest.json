{
    "manifest_version": 2,
    "name": "HateBlock",
    "version": "1.0",
    "description": "Uses machine learning to hide hateful tweets.",
    "permissions": ["https://twitter.com/*"],
    "options_page": "options.html",
    "content_scripts": 
    [
        {
            "matches": ["https://twitter.com/*"],
            "js": ["jquery.min.js", "classifier.js", "basic_plugin.js"]
        }
    ]
}